pipelines:
    - main_probelit.vert.glsl main_probelit_nossr.frag.glsl
    - main_probelit.vert.glsl main_probelit_nossr.frag.glsl
flags:
    - two_sided
    - emissive
textures:
    - bistro/Emissive_StreetLight_BaseColor.tex
    - bistro/Emissive_StreetLight_Normal.tex
    - bistro/Emissive_StreetLight_night_roughness.tex
    - bistro/Emissive_StreetLight_night_metallic.tex
    - default_opacity.tex
    - bistro/Emissive_StreetLight_Emissive.tex
params:
    - 1.0 1.0 1.0 1.0    # base color, roughness
    - 0.0 0.0 0.5 0.0    # sheen, sheen_tint, specular, spec_tint
    - 1.0 0.0 0.0 0.0    # metallic, transmission, clearcoat, clearcoat_roughness
    - 0.0 50.0 50.0 50.0    # transparency, ior/emission color
