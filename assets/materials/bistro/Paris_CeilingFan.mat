pipelines:
flags:
    - emissive
textures:
    - bistro/Paris_CeilingFan_BaseColor.tex
    - bistro/Paris_CeilingFan_Normal.tex
    - bistro/Paris_CeilingFan_roughness.tex
    - bistro/Paris_CeilingFan_metallic.tex
    - default_opacity.tex
    - bistro/Paris_CeilingFan_Emissive.tex
params:
    - 1.0 1.0 1.0 1.0    # base color, roughness
    - 0.0 0.0 0.5 0.0    # sheen, sheen_tint, specular, spec_tint
    - 1.0 0.0 0.0 0.0    # metallic, transmission, clearcoat, clearcoat_roughness
    - 0.0 10.0 10.0 10.0    # transparency, ior/emission color
---
pipelines:
textures:
    - default_basecolor.tex
    - default_normalmap.dds
    - default_roughness.tex
params:
    - 0.0 0.0 0.0 0.0      # base color, roughness
    - 0.0 0.0 0.0 0.0      # sheen, sheen_tint, specular, spec_tint
    - 0.0 0.0 0.0 0.0      # metallic, transmission, clearcoat, clearcoat_roughness