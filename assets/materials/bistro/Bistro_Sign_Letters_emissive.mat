pipelines:
    - main_probelit.vert.glsl main_probelit_nossr.frag.glsl
    - main_probelit.vert.glsl main_probelit_nossr.frag.glsl
flags:
    - two_sided
    - emissive
textures:
    - bistro/Bistro_Sign_Letters_BaseColor.tex
    - bistro/Bistro_Sign_Letters_Normal.tex
    - bistro/Bistro_Sign_Letters_emissive_roughness.tex
    - bistro/Bistro_Sign_Letters_emissive_metallic.tex
    - default_opacity.tex
params:
    - 1.0 1.0 1.0 1.0    # base color, roughness
    - 0.0 0.0 0.5 0.0    # sheen, sheen_tint, specular, spec_tint
    - 1.0 0.0 0.0 0.0    # metallic, transmission, clearcoat, clearcoat_roughness
    - 0.0 0.7382196187973022 10.0 0.8771008253097534    # transparency, ior/emission color
